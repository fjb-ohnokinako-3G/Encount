<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.encount">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.encount.user.UserLikeList"/>
        <activity android:name="com.example.encount.user.UserFriendList" />
        <activity android:name="com.example.encount.user.UserPostList" />
        <activity android:name="com.example.encount.user.ProfileChange" />
        <activity android:name="com.example.encount.user.PassForgot" />
        <activity android:name="com.example.encount.friend.FriendAdd" />
        <activity
            android:name="com.example.encount.user.UserLogin"
            android:noHistory="true" />
        <activity
            android:name="com.example.encount.user.UserSingin"
            android:noHistory="true" />
        <activity
            android:name="com.example.encount.user.UserSettings"
            android:noHistory="true" />
        <activity
            android:name="com.example.encount.user.UserProfile"
            android:noHistory="true" />
        <activity android:name="com.example.encount.post.UserHome" />
        <activity
            android:name="com.example.encount.post.UserPost"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.example.encount.post.PostDetails" />
        <activity android:name="com.example.encount.NavigationActivity" />
        <activity android:name="com.example.encount.friend.FriendProfile" />
        <activity android:name="com.example.encount.maps.MapsHome" />
        <activity android:name="com.example.encount.maps.SpotMainActivity"/>
        <activity
            android:name="com.example.encount.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- マップ機能を利用するために必要な記述　ここから -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
</manifest>