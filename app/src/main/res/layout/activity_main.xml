<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/userHeader"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#FF0000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FFFF00"/>

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="@string/cngProf"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userPostCount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="12"
                android:maxLength="6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userPost"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userFollowCount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="111111"
                android:maxLength="6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userFollow"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userStarCount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="122000"
                android:maxLength="6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userStar"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userBio"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="15sp"
                android:background="#FF00FF"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>



